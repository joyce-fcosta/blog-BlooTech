<div class="card">
    <div class="card-body">
        <h3>Nova Postagem</h2>
        <form action="/admin/postagens/novapostagem" method="POST">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control">

            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control">

            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control">
            
            <label for="conteudo">Conteúdo: </label>
            <textarea type="text" name="conteudo" class="form-control" rows="5" > </textarea>
            
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="mt-3" id="">
                {{#each categoriaP}}
                    <option value="{{id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma Categoria Registrada</option>  
                {{/each}}
            </select>
            
            <br>
            
            <button class="btn btn-success mt-3">Criar Postagem</button>
        </form>
    </div>
</div>