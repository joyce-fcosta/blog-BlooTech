<h2>Lista de categorias:</h2>
<hr>
<a href="/admin/addcategorias"><button class="btn btn-success">Adicionar nova categoria</button></a>

{{#each categoriaV}}
    <div class="card mt-4">
        <div class="card-body">
            {{!-- <small>{{createdAt}}</small> --}}
            <h4>{{nome}}</h4>
            <p>{{slug}}</p>
            <a href="/admin/categorias/edit/{{id}}"><button class="btn btn-success">Editar</button></a>
            <a href="/admin/categorias/deletar/{{id}}"><button class="btn btn-danger">Deletar</button></a>
            <br>
        </div>
    </div>
{{/each}}
