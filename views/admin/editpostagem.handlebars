<div class="card">
    <div class="card-body">
        <h3>Editar Postagem</h2>
        <form action="/admin/postagem/edit/" method="POST">

            <input type="hidden" name="id" value="{{postagem.id}}">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control" value="{{postagem.titulo}}">

            <label for="slug">Slug: </label>
            <input type="text" name="slug" class="form-control" value="{{postagem.slug}}">

            <label for="descricao">Descrição: </label>
            <input type="text" name="descricao" class="form-control" value="{{postagem.descricao}}">
            
            <label for="conteudo">Conteúdo: </label>
            <textarea type="text" name="conteudo" class="form-control" rows="5" value="">{{postagem.conteudo}}</textarea>
            
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="mt-3" id="">
                {{#each categoriaId}}
                    <option>{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhuma Categoria Registrada</option>  
                {{/each}}
            </select>
            
            <br>
            
            <button class="btn btn-success mt-3">Editar Postagem</button>
        </form>
    </div>
</div>